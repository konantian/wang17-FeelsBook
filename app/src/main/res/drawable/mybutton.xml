<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="#028af1" />
            <gradient android:angle="360" android:startColor="#ed4264" android:endColor="#ffedbc"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="#028af1" />
            <solid android:color="#028af1"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="#ed4264" />
            <gradient android:angle="360" android:startColor="#ed4264" android:endColor="#ffedbc"  />
        </shape>
    </item>
</selector>